<Window x:Class="AccountsSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountsSystem"
        mc:Ignorable="d"
        Title="报销管理" Height="499" Width="872">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="交易记录">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="257*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid CanUserAddRows="False" CellEditEnding="TransTable_CellEditEnding" x:Name="TransTable" AutoGenerateColumns="False" Margin="39,69,0,0" HorizontalAlignment="Left" Width="700" Height="299" VerticalAlignment="Top" Grid.ColumnSpan="2">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="LightBlue"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ProjectExpenseID}" Value="{x:Null}">
                                        <Setter Property="Background" Value="White"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Binding="{Binding ProjectExpenseID}" Header="公账"/>
                            <DataGridTextColumn Width="*" IsReadOnly="True" Binding="{Binding Product}" Header="产品"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding Price}" Header="金额"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding TimeStamp}" Header="时间"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding Source}" Header="来源"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="button" Content="导入" Margin="664.046,392,0,0" Click="Button_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Grid.Column="1"/>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="532.046,391,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Grid.Column="1">
                        <ComboBoxItem Content="微信"/>
                        <ComboBoxItem Content="支付宝"/>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="项目视图">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="ProjListCombo" DisplayMemberPath="ProjectName" SelectedValuePath="ID" HorizontalAlignment="Left" Margin="74,21,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ProjExpenseTable_SelectionChanged"/>
                    <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="680,45,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click"/>
                    <DataGrid CanUserAddRows="False" CellEditEnding="ProjExpenseTable_CellEditEnding" x:Name="ProjExpenseTable" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="250" Margin="33,68,0,0" VerticalAlignment="Top" Width="588">
                        <DataGrid.Columns>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding Product}" Header="产品"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding Price}" Header="金额"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding TimeStamp}" Header="时间"/>
                            <DataGridTextColumn IsReadOnly="True" Binding="{Binding ProjectName}" Header="项目"/>
                            <DataGridTextColumn MinWidth="100" Width="*" Binding="{Binding Usage}" Header="用途"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
